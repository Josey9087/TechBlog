<div class="row justify-content-center">
  <div class="col-md-6">
    <h2>Welcome to your dashboard {{username}}</h2>

    <form class="form signup">
      <div class="form-group">
        <label for="name-post">Post:</label>
        <input class="form-input" type="text" id="new-post-name" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <input class="form-input" type="text" id="new-post-body" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary1" type="submit">Create</button>
      </div>
    </form>
  </div>
</div>

  {{#if posts.length}}
  <div class="">
    <h3>Your posts: </h3>
    {{#each posts as |post|}}
    <div class="">
      <div class="">
        <h4><a href="/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="">
        <button class="">UPDATE</button>
        <button class="">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>